.img,
.cover {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  z-index: -1;
}
.cover {
  background-color: rgb(0, 0, 0, .5);
  backdrop-filter: blur(8px);
}
.nav {
  width: 100%;
  height: 44px;
  position: fixed;
  z-index: 2;
}
.van-nav-bar {
  padding-top: 0 !important;
  height: 44px !important;
  --nav-bar-background-color: transparent;
  --nav-bar-icon-color: #ffff;
  background-color: transparent !important;
}

.van-hairline--bottom:after {
  border-bottom-width: 0 !important;
  /* 去掉navbar后方的白线 */
}

.title {
  display: flex;
  color: rgb(211, 209, 209);
  justify-content: center;
  font-size: 30rpx;
}

.split {
  color: rgb(211, 209, 209) !important;
  margin: 0 10rpx;
}
.slider {
  margin: 0 8px;
  margin-bottom: 20rpx;
}
.content {
  flex: 1;
  color: #ffff;
  justify-content: space-around;
  /* padding: 40rpx 50rpx; */
  display: flex;
  flex-direction: column;
}

.content .image {
  width: 100%;
  height: 600rpx;
  border-radius: 20rpx;
  margin-bottom: 44rpx;
}

.song-name {
  font-size: 48rpx;
  font-weight: 700;
  margin: 18rpx 0;
}

.singer {
  font-size: 36rpx;
  color: rgb(211, 209, 209);
}
.lyric {
  text-align: center;
  margin: 20rpx 0;
  color: rgb(38, 206, 138);
  height:88rpx;
}
.swiper {
  height: 100%;
  margin-top: 44px;
  padding: 0 40rpx;
}
.main {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.control {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.btn {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.time {
  padding: 0 5px;
  color: #fff;
  display: flex;
  justify-content: space-between;
}
.btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.btn .pic {
  padding: 40rpx 0;
  height: 75rpx;
  width: 75rpx;
}
.btn .stop {
  width: 100rpx;
  height: 100rpx;
}
.active {
  color:  #fff;
}
.lyric-list {
  height: 100%;
}
.lyric-list .lyric {
  color: #fff;
}
.lyric-list ::-webkit-scrollbar {
  display: none;
}
.lyric-active {
  font-size: 36rpx;
  color: rgb(39, 205, 138)!important;
}