<van-search value="{{ value }}" shape="round" bind:click-input="onSearchClick" placeholder="请输入搜索关键词" />
<swiper circular indicator-dots style="height: {{bannerHeigt}}px" class="banner">
  <block wx:for="{{banners}}" wx:key="targetId">
    <swiper-item class="banner-item">
      <image bindload="imgLoad" class="banner-img" src="{{item.imageUrl}}" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>
<view class="recommend">
  <header title="歌曲推荐" bind:moreClick="moreClick"></header>
  <recommend-item wx:for="{{recommendList}}" wx:key="id" recommend="{{item}}"></recommend-item>
</view>
<header title="热门歌单" bind:moreClick="moreClick"></header>
<scroll-view class="hot-music" scroll-x="true">
    <hot-item hotMusic="{{item}}" wx:for="{{hotList}}" wx:key="id" class="hot-item"></hot-item>
</scroll-view>