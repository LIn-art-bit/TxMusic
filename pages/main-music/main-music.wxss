page {
  background-color: #fafafa;
  box-sizing: border-box;
  padding: 0 18rpx;
  --search-padding: 10px 0;
}
.banner {
  border-radius: 12rpx;
  overflow: hidden;
}
.van-search {
  background-color:#fff !important;
}
.banner-img {
  width: 100%;
}
.scroll-list {
  white-space: nowrap;
}
.scroll-list:last-of-type {
  margin-left: -18rpx;
}
.hot-item {
  display: inline-block;
  height: 250rpx;
  width: 250rpx;
  margin: 10rpx;
}
.rank-list {
  padding: 12rpx 0;
}
.play-bar {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}
.scroll-list ::-webkit-scrollbar {
  display: none;
}