.menu-header {
  margin: 0 -20rpx;
  height: 450rpx;
  background-size: cover;
  position: relative;
}
.blurry-overlay {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(8rpx); 
}
.content {
  top: 0;
  left: 0;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.container {
  width: 250rpx;
  height: 250rpx;
  margin: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.container .img {
  width: 100%;
}

.text {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #ffff;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
}

.text .img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}

.person {
  display: flex;
  align-items: center;
  margin:20rpx 0;
}
.introduce {
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bottom {
  display: flex;
  position: absolute;
  width: 100%;
  bottom: 60rpx;
  left: 0;
  color: #fff;
  font-size: 26rpx;
  justify-content: space-around;
}
.icon {
  width: 40rpx;
  margin: 0 10rpx;
}
.favor {
  display: flex;
  align-items: center;
}
.share {
  display: flex;
  align-items: center;
}