.rank-item {
  margin: 20rpx 0;
  display: flex;
  border-radius: 20rpx;
  overflow: hidden;
  height: 250rpx;
}
.left {
  background-color: rgb(237, 237, 237);
  flex: 1;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-around; */
}
.right {
  width: 250rpx;
  position: relative;
}
.img {
  width: 100%;
}
.title {
  margin: 5rpx 15rpx;
  font-size: 35rpx;
  font-weight: 500;
}
.item {
  margin: 5rpx 15rpx;
  font-size: 25rpx;
  color: rgb(90, 88, 89);
}
.count {
  position: absolute;
  border-radius: 8rpx;
  padding: 5rpx;
  bottom: 2rpx;
  right: 2rpx;
  line-height: 40rpx;
  color: #ffff;
  height: 40rpx;
  font-size: 12px;
  background-color: rgba(65, 62, 61, 0.507);
}